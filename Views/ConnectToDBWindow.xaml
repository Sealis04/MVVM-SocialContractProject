<UserControl x:Class="MVVM_SocialContractProject.Views.ConnectToDBWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_SocialContractProject.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>

        <!--LOGO-->
        <!--<Image Source="Assets/logo.png" Grid.Column="0" Grid.Row="1"/>-->

        <!--Login-->
        <Grid   Grid.Column="1" Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Border Grid.ColumnSpan="2" Grid.RowSpan="4" Background="Gray" BorderThickness="1,1,1,1" CornerRadius="30,30,30,30" RenderTransformOrigin="0.5,0.5" Margin="109,65,107,33" Grid.Column="1">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="0.023"/>
                        <RotateTransform Angle="-0.182"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
            </Border>


            <TextBlock Text="Server" 
                     
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Center"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="24px"
                       Grid.Column="1" Height="30" Margin="137,0,27,77" Width="86" Grid.Row="1" RenderTransformOrigin="0.5,0.5"
                       >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.013"/>
                        <TranslateTransform X="0.018" Y="-0.04"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBox
                        x:Name="userTB"
                       Grid.Column="2"
                        Height="29"
                       VerticalAlignment="Bottom"  
                        Text="{Binding Server, UpdateSourceTrigger=PropertyChanged}" Margin="26,0,141,78" Grid.Row="1" RenderTransformOrigin="0.5,0.5"
               >
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.013"/>
                        <TranslateTransform X="0.02" Y="0.018"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <TextBox
                x:Name="userTB_Copy"
                Grid.Column="2"
                Height="29"
                VerticalAlignment="Bottom"  
                Text="{Binding Database, UpdateSourceTrigger=PropertyChanged}" Margin="26,0,142,24" Grid.Row="1" RenderTransformOrigin="0.5,0.5"
               >
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.013"/>
                        <TranslateTransform X="0.02" Y="0.018"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <TextBlock Text="Username" 
                     
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Center"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="24px"
                Grid.Column="1" Height="30" Margin="132,0,0,82" Width="118" Grid.Row="2" RenderTransformOrigin="0.5,0.5"
                       >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.013"/>
                        <TranslateTransform X="0.018" Y="-0.04"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBox
                x:Name="userTB_Copy1"
                Grid.Column="2"
                Height="29"
                VerticalAlignment="Bottom"  
                Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
 Margin="27,0,140,82" Grid.Row="1" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2"
               >
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.013"/>
                        <TranslateTransform X="0.02" Y="0.018"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <TextBlock Text="Password" 
                     
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Center"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="24px"
                Grid.Column="1" Height="30" Margin="137,0,495,29" Width="118" Grid.Row="2" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2"
                       >
            </TextBlock>
            <TextBox
                x:Name="userTB_Copy2"
                Grid.Column="2"
                Height="29"
                VerticalAlignment="Bottom"  
                Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Margin="28,0,139,29" Grid.Row="2" RenderTransformOrigin="0.5,0.5"
               >
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.013"/>
                        <TranslateTransform X="0.02" Y="0.018"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <TextBlock Text="Database" 
                     
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Center"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="24px"
                Grid.Column="1" Height="30" Margin="131,0,8,25" Width="111" Grid.Row="1" RenderTransformOrigin="0.5,0.5"
                       >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.013"/>
                        <TranslateTransform X="0.018" Y="-0.04"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Grid>
        <Button 
            x:Name="button"
            Content="Connect to DB"
            FontFamily="Arial"
            Foreground="Black"
            FontWeight="ExtraBlack"
            Width="300"
            Height="45" 
            VerticalAlignment="Bottom" 
            Command="{Binding ConnectDB}"
                            Margin="234,0,0,70"
                            />
    </Grid>
</UserControl>
