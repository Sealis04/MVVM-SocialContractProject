<UserControl x:Class="MVVM_SocialContractProject.Views.EncodeStudentContractRecord"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_SocialContractProject.Views"
             xmlns:ui="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:converter="clr-namespace:MVVM_SocialContractProject.Commands"
             mc:Ignorable="d" Height="900" Width="1440
             ">
    <Grid Margin="129,42,129,69">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Logo-->
        <!--<Image Source="Assets/plv.png" Grid.Row="0" Grid.Column="1"/>-->
        <Border Grid.ColumnSpan="1"
                Grid.Column="2"
                Grid.Row="1"
                Grid.RowSpan="1" 
                Background="Gray" 
                BorderThickness="1,1,1,1" 
                CornerRadius="20,20,20,20"/>
        <!--Content-->
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="78*"/>
                <RowDefinition Height="78*"/>
                <RowDefinition Height="78*"/>
                <RowDefinition Height="77"/>
                <RowDefinition Height="78*"/>
                <RowDefinition Height="77*"/>
            </Grid.RowDefinitions>

            <!--Surname-->
            <TextBlock
                 
                        Text="Last Name:"
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Right"
                       FontFamily="Arial"
                       FontWeight="Bold"
                        FontSize="20px"
                       Grid.Column="1" Margin="0,0,10,0" Grid.Row="3" RenderTransformOrigin="-4.29,2.087"
                       />

            <!--Firstname-->
            <TextBlock
                        Text="First Name:"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Right"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="20px"
                       Grid.Column="1"
                        Grid.Row="1" Margin="0,55,9,0"
                       />

            <!--Middle-->
            <TextBlock
                        Text="Middle Name:"
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Right"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="20px"
                       Grid.Column="1"
                        Grid.Row="2" Margin="0,0,9,0"
                       />

            <!--BN-->
            <TextBlock
                        Text="Batch Number:"
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Right"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="18px"
                       Grid.Column="1"
                        Grid.Row="4" Margin="0,0,9,10"
                       />

            <!--Student#-->
            <TextBlock
                        Text="Student Number:"
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Right"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="16px"
                       Grid.Column="1"
                       />
            <ui:AutoSuggestBox  x:Name="sID_tb"
                        Height="30px" 
                        Margin="4,72,2,0" Grid.Column="3"
                        IsTextSearchEnabled="True"
                        Text="{Binding StudentID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        ItemsSource="{Binding Path= studentIDCollection}"
                               >
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="QuerySubmitted" >
                        <i:InvokeCommandAction Command ="{Binding TextChange}" CommandParameter="{Binding ElementName=sID_tb}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ui:AutoSuggestBox>
            <!--TextChanged="{Binding TextChange}"
                        QuerySubmitted="{Binding QuerySubmit}"-->
            <TextBox
                 x:Name="fn_Tb"
                     Grid.Column="3"
                        Height="30px"
                       VerticalAlignment="Bottom" Margin="1,0,137,6" Grid.Row="1" Grid.ColumnSpan="2"  
                Text="{Binding Firstname,UpdateSourceTrigger=PropertyChanged}"
                IsEnabled="{Binding FNEnabled}"
                />
            <TextBox
                 x:Name="mn_Tb"
                     Grid.Column="3"
                    Grid.Row="2"
                        Height="30px"
                       VerticalAlignment="Bottom" 
                Margin="0,0,136,76" Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Right" Width="278"
                Text="{Binding Middlename,UpdateSourceTrigger=PropertyChanged}"
                 IsEnabled="{Binding MNEnabled}"
                />
            <TextBox
                x:Name="ln_Tb"
                     Grid.Column="2"
                    Grid.Row="3"
                        Height="30px"
                       VerticalAlignment="Bottom" Margin="14,0,1,103" Grid.ColumnSpan="2" Grid.RowSpan="2"
                Text="{Binding Lastname,UpdateSourceTrigger=PropertyChanged}"
                 IsEnabled="{Binding LNEnabled}"
                />
            <TextBox
                x:Name="bn_Tb"
                     Grid.Column="3"
                    Grid.Row="4"
                        Height="30px"
                       VerticalAlignment="Bottom" Margin="1,0,137,3" Grid.ColumnSpan="2"
                Text="{Binding BatchNo,UpdateSourceTrigger=PropertyChanged}"
                 IsEnabled="{Binding BNEnabled}"
                />
            <TextBox
                x:Name="course_Tb"
                Grid.Column="3"
                Grid.Row="5"
                Height="30px"
                VerticalAlignment="Bottom" Margin="0,0,0,31"
                   Text="{Binding Course,UpdateSourceTrigger=PropertyChanged}"
                 IsEnabled="{Binding CEnabled}"
                />
            <TextBox
                x:Name="sy_Tb"
                Grid.Column="5"
                Height="30px"
                VerticalAlignment="Bottom" Margin="9,0,1,0" Grid.ColumnSpan="2"
               Text="{Binding SchoolYear,UpdateSourceTrigger=PropertyChanged}"        
                
                />

            <TextBox
                x:Name="firstSem_Tb"
                     Grid.Column="6"
                    Grid.Row="1"
                        Height="30px"
                       VerticalAlignment="Bottom" Margin="3,0,7,102" Grid.RowSpan="2"
                    Text="{Binding FirstSem,UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2"          
                
                />
            <TextBox
                x:Name="SecondSem_Tb"
                     Grid.Column="6"
                    Grid.Row="2"
                        Height="30px"
                       VerticalAlignment="Bottom" Margin="0,0,0,76" Grid.RowSpan="2"
                         Text="{Binding SecondSem,UpdateSourceTrigger=PropertyChanged}"     
                
                />
            <TextBox
                x:Name="summer_Tb"
                Grid.Column="6"
                Grid.Row="3"
                Height="30px"
                VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="4,0,6,103" Grid.RowSpan="2"
                  Text="{Binding Summer,UpdateSourceTrigger=PropertyChanged}"    
                />
            <!--<controls:AutoCompleteBox  
                     x:Name="sID_tb"
                     Grid.Column="2"
                        Height="30px"
                        TextChanged="SID_tb_TextChanged"
                        IsTextCompletionEnabled="False"
                        SelectionChanged="SID_tb_SelectionChanged"
                       VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="4,0,11,0"
                >
            </controls:AutoCompleteBox>-->
            <!--<TextBox
                     x:Name="sID_tb"
                     Grid.Column="2"
                        Height="30px"
                       VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="4,0,11,0" TextChanged="SID_tb_TextChanged"
                
                        
                
                />-->

            <!--1st Sem-->
            <TextBlock
                        Text="1st Semester:"
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Right"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="16px"
                       Grid.Column="4"
                        Grid.Row="1" Margin="0,0,1,4"
                       />

            <!--2nd Sem-->
            <TextBlock
                        Text="2nd Semester:"
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Right"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       FontSize="16px"
                       Grid.Column="4"
                        Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,9,75" Grid.RowSpan="2"
                       />

            <TextBlock
                Text="Summer:"
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="16px"
                Grid.Column="4"
                Grid.Row="3" Margin="0,0,1,3"
                       />

            <TextBlock
                Text="Course:"
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="18px"
                Grid.Column="1"
                Grid.Row="5" Margin="0,0,9,30"
                       />

            <TextBlock
                Text="School Year:"
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right"
                FontFamily="Arial"
                FontWeight="Bold"
                FontSize="16px"
                Grid.Column="4" Margin="0,0,3,0"
                       />
            <Button x:Name="uploadBtn"
                Grid.Column="6"
                Content="Upload Social Contract"
                FontFamily="Arial"
                Foreground="Black"
                FontWeight="ExtraBlack" 
                Height="46" 
                VerticalAlignment="Center"
                Margin="2,2,0,54" Grid.Row="5" Width="274"
                Command="{Binding UploadImage}" Grid.ColumnSpan="2"
                            />

        </Grid>
        <Grid Grid.Column="2" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="Submit"
                           Grid.Column="1"
                            Grid.Row="2"
                            Content="Submit"
                            FontFamily="Arial"
                            Foreground="Black"
                            FontWeight="ExtraBlack"
                            Command="{Binding SubmitCommand}"
                            Height="45" 
                            VerticalAlignment="Center" 
                            />
            <Button x:Name="cancel_btn"
                           Grid.Column="3"
                            Grid.Row="2"
                            Content="Cancel"
                            FontFamily="Arial"
                            Foreground="Black"
                            FontWeight="ExtraBlack"
                             Command="{Binding CancelCommand}"
                            Height="45" 
                            VerticalAlignment="Center" 
                            />
        </Grid>
    </Grid>
</UserControl>
